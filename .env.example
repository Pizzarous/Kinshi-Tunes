# Bot configuration file. Copy this to .env and fill in your values.
# Every value must be a string (""). Leave optional ones blank to use defaults.
#
# OPTIONAL = Can be left blank, a default will be used.
# REQUIRED = Must be set for the bot to work.
# MULTIPLE = Accepts multiple values separated by comma or semicolon.
#            Use single-quotes (') to escape commas/semicolons inside a value.

# ==============================================================================
# REQUIRED
# ==============================================================================

# Your Discord bot token.
# Example: DISCORD_TOKEN="NTE5NjQ2MjIxNTU2Nzc2OTcw.XAcEQQ.0gjhNbGeWBsKP6FVuIyZWlG2cMd"
DISCORD_TOKEN=""

# ==============================================================================
# ACCESS CONTROL
# ==============================================================================

# Your Discord user ID. Grants access to host commands (restart, shutdown, hostaction, clearaudiocache).
# Example: ADMIN="712938456783102456"
ADMIN=""

# OPTIONAL, MULTIPLE - Developer Discord user IDs.
# Grants access to devOnly commands (e.g. eval) and bypasses cooldowns.
# Example: DEVS="956162927726063626, 366169273485361153"
DEVS=""

# ==============================================================================
# BOT SETTINGS
# ==============================================================================

# Main command prefix.
# Default: !
MAIN_PREFIX=""

# OPTIONAL, MULTIPLE - Alternative prefixes. {mention} = @bot mention.
# Default: {mention}
ALT_PREFIX="{mention}"

# OPTIONAL - Enable prefix command support.
# Disable if MessageContent intent is not enabled on your bot.
# Default: yes
ENABLE_PREFIX=""

# OPTIONAL - Enable slash command support.
# Default: yes
ENABLE_SLASH_COMMAND=""

# OPTIONAL - Bot language.
# Available: en | Default: en
LOCALE=""

# OPTIONAL - Embed color (hex code).
# Default: 22C9FF
EMBED_COLOR=""

# OPTIONAL - Success/failure emojis.
# Default: ✅ / ❌
YES_EMOJI=""
NO_EMOJI=""

# OPTIONAL, MULTIPLE - Bot status messages. Supports these placeholders:
# {prefix}, {userCount}, {textChannelCount}, {serverCount}, {playingCount}, {username}
ACTIVITIES="My default prefix is {prefix}, music with {userCount} users, {textChannelCount} text channels in {serverCount} guilds, 'Hello there, my name is {username}'"

# OPTIONAL, MULTIPLE - Activity types for each entry in ACTIVITIES (same order).
# Available: PLAYING, WATCHING, LISTENING, COMPETING
ACTIVITY_TYPES="PLAYING, LISTENING, WATCHING, PLAYING, COMPETING"

# ==============================================================================
# MUSIC SETTINGS
# ==============================================================================

# OPTIONAL - Audio streaming backend.
# Available: yt-dlp, play-dl | Default: yt-dlp
STREAM_STRATEGY=""

# OPTIONAL - Default playback volume (0-100).
# Default: 100
DEFAULT_VOLUME=100

# OPTIONAL - Music search result UI.
# Available: message, selectmenu | Default: message
MUSIC_SELECTION_TYPE=""

# OPTIONAL - Keep bot in voice channel after queue ends.
# Default: no
STAY_IN_VC_AFTER_FINISHED=""

# OPTIONAL - Enable the 24/7 (stay-in-voice) command.
# Default: no
ENABLE_24_7_COMMAND=""

# OPTIONAL - Spotify API credentials (required for Spotify link support).
# Example: SPOTIFY_CLIENT_ID="fdb7cfbe4f834251be3bf80c6bb5e70d"
SPOTIFY_CLIENT_ID=""
SPOTIFY_CLIENT_SECRET=""

# ==============================================================================
# DEVELOPER / DEBUG
# ==============================================================================

# OPTIONAL - Server ID(s) used for dev mode command registration.
# Example: MAIN_GUILD="972407605295198258"
MAIN_GUILD=""

# OPTIONAL - Run in development mode (registers slash commands to MAIN_GUILD only).
# Available: production, development | Default: production
NODE_ENV=""

# OPTIONAL - Enable debug logging (raw events, queue changes, etc).
# Default: no
DEBUG_MODE=""

# OPTIONAL - Enable REPL console for live code evaluation.
# Provides a "shardManager" variable in the REPL session.
# Default: no
REPL=""
